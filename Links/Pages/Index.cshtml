@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
<p>@Model.A + @Model.B = @Model.Result</p>   
</div>
<div class="m-1">
    A: 
    @for(int i = 0; i < 10; i++)
    {
        <a class=@(Model.A == i ? "btn btn-primary" : "btn btn-secondary") asp-page="/Index" asp-route-a="@i" asp-route-b="@Model.B">@i</a>
    }
</div>
<div class="m-1">
    B:
    @for (int i = 0; i < 10; i++)
    {
        <a class=@(Model.B == i ? "btn btn-primary" : "btn btn-secondary") asp-page="/Index" asp-route-a="@Model.A" asp-route-b="@i">@i</a>
    }
</div>
<div>
    Oblíbené: <a asp-page="/Index" asp-route-a="1" asp-route-b="1">1+1</a>
</div>
